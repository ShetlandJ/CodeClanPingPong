<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="myfirstgame.pingpongscorer.GameActivity">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="200dp"
        android:layout_weight=".5"
        android:background="@drawable/playeronescoreboard">

        <TextView
            android:id="@+id/playerOneGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="0.5"
            android:text="TextView"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.055"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playerOneScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="90sp"
            app:layout_constraintBottom_toTopOf="@+id/playerTwoGameName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerOneGameName"
            app:layout_constraintVertical_bias="0.891"
            tools:text="0" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="200dp"
        android:layout_weight=".5"
        android:background="@drawable/playertwoscoreboard">

        <TextView
            android:id="@+id/playerTwoScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:onClick="onClick2"
            android:textSize="90sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="2dp"
            tools:text="0" />

        <TextView
            android:id="@+id/playerTwoGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="0.5"
            android:text="TextView"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</LinearLayout>
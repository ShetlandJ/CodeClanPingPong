<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        >

        <TableRow
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/playerNameTable"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Name" />

            <TextView
                android:id="@+id/winAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/playerNameTable"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="W" />

            <TextView
                android:id="@+id/lossAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/playerNameTable"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="L" />


            <TextView
                android:id="@+id/pointsScored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/playerNameTable"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="PF" />

            <TextView
                android:id="@+id/pointsConceded"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/playerNameTable"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="PA" />

            <TextView
                android:id="@+id/winPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="68dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:layout_weight="1"
                app:layout_constraintStart_toEndOf="@+id/playerNameTable"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="%" />

        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>